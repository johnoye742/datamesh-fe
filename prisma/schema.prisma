generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model jobs {
  id              String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at      DateTime     @default(now()) @db.Timestamptz(6)
  title           String
  organisation_id BigInt?
  user_id         String       @default(dbgenerated("auth.uid()")) @db.Uuid
  priority        String?      @default("normal")
  schedule        DateTime     @default(now()) @db.Timestamptz(6)
  http_tasks      http_tasks[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model http_tasks {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  url        String
  job_id     String   @db.Uuid
  status     String   @default("pending")
  jobs       jobs     @relation(fields: [job_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
